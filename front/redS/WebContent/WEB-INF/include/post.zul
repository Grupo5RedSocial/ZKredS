<vlayout sclass="post">
	<hlayout>
		<image
			sclass="post-avatar"
			src="@load(post.author.avatar)" />
	
		<vlayout spacing="0">
			<label
				sclass="post-author" 
				value="@load(post.author.name)" />
			
			<label
				sclass="post-time" 
				value="@load(post.time)" />
		</vlayout>
	</hlayout>
				
	<html sclass="post-article" content="@load(post.content)" />
			
	<!-- <LikeArea> -->
	<div
		sclass="like-area touchable" 
		onClick='@command("feedback", instance=post, ref=self)'>
		<hbox width="100%">
			<cell width="70%">
				<toolbarbutton
					style="color: #576B95; font-size: 15px;"
					onClick='@command("likePost", instance=post)'
					label='@init("Like") @load(post.liked ? "Unlike" : "Like", after="likePost")'
					autodisable="false" 
					visible="false"/>
				<label value="â€§" />
				<toolbarbutton
					style="color: #576B95; font-size: 15px;"
					onClick='@command("feedback", instance=post, ref=self.parent.parent.parent)'
					label="Comentario"
					autodisable="true" />
			</cell>
				
			<cell width="30%" align="right">	
				<!-- Like Count -->
				<!-- Comentado por Stalyn Granda 10/03/2016
				<span visible="@bind(post.likeCount ge 0)"> 
					<image
						src="data:image/png;base64," />
					<label value='@init(post.likeCount) @load(post.likeCount)' />
				</span>
				 -->
				<!--  -->
						
				<!-- Comment Count -->
				<span visible="@bind(post.commentCount ge 0)">
					<image
						src="data:image/png;base64," />
					<label value="@load(post.commentCount+1)" />
				</span>
			</cell>
			<!--  -->
		</hbox>
		<!-- </LikeArea -->
	</div>
</vlayout>
